{
  "name": "ai-tagged-notes-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:frontend": "cd frontend && npm start",
    "build": "tsc -p tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node dist/server.js",
    "start:api": "node dist/api/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "node --test",
    "mcp:dev": "tsx src/mcp-stdio.ts",
    "mcp:start": "node dist/mcp-stdio.js",
    "vercel-build": "npm run build && cd frontend && npm install && npm run build",
    "deploy": "vercel --prod",
    "get-url": "node scripts/get-vercel-url.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@supabase/supabase-js": "^2.58.0",
    "@xenova/transformers": "^2.17.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "whatwg-url": "^15.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vercel/node": "^3.2.29",
    "eslint": "^9.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "vercel": "^48.1.6"
  },
  "overrides": {
    "whatwg-url": "^15.1.0",
    "qs": "^6.14.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
